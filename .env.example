# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/enterprise_db"

# Authentication (NextAuth.js - for reference, not used in Lovable)
NEXTAUTH_SECRET="your-super-secret-jwt-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Socket.IO Configuration
SOCKET_URL="ws://localhost:3001"

# API Keys (Examples)
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."

# External Services
REDIS_URL="redis://localhost:6379"
SMTP_HOST="smtp.company.com"
SMTP_PORT="587"
SMTP_USER="noreply@company.com"
SMTP_PASS="smtp-password"

# Application Settings
NODE_ENV="development"
LOG_LEVEL="debug"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="15"

# Security
CORS_ORIGIN="http://localhost:3000"
JWT_EXPIRATION="7d"
PASSWORD_MIN_LENGTH="8"

# Analytics & Monitoring
ANALYTICS_API_KEY="analytics-key"
SENTRY_DSN="https://sentry.io/dsn"

# File Upload
MAX_FILE_SIZE="5242880" # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,application/pdf"

# Feature Flags
ENABLE_REAL_TIME_NOTIFICATIONS="true"
ENABLE_ANALYTICS_DASHBOARD="true"
ENABLE_ADVANCED_SECURITY="true"